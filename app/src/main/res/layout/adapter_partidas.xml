<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/nombrePartida"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:layout_marginEnd="11dp"
        android:text="Nombre"
        android:textColor="#0EA37A"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/ptsPartida"
        tools:layout_editor_absoluteY="208dp" />

    <TextView
        android:id="@+id/ptsPartida"
        android:layout_width="59dp"
        android:layout_height="35dp"
        android:layout_marginEnd="26dp"
        android:background="#95C3AE"
        android:backgroundTint="#0EA37A"
        android:text="-15"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="205dp" />

    <TextView
        android:id="@+id/fechaPartida"
        android:layout_width="136dp"
        android:layout_height="32dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="12dp"
        android:text="19/03/2002"
        android:textColor="#0EA37A"
        android:textSize="24sp"
        app:layout_constraintEnd_toStartOf="@+id/nombrePartida"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="208dp" />


</androidx.constraintlayout.widget.ConstraintLayout>